<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
	<appSettings>
		<!-- Choose Either to Reset Daily or Weekly or Monthly -->
		
		<add key = "ResetType" value = "Monthly" /> <!-- Daily,Weekly,Monthly --> 
		
		<!-- Add Date of Reset in The format (1,2,3,4,5,6,7) -->
		<add key="DateOfReset" value="1" />

		<!-- Add Day of Reset in The format (sun,mon,tue, wed,thu,fri,sat) -->
		<add key="DayOfReset" value="sun" />

		<!-- Add Time of Reset in The format (hh:mm:ss) -->
		<add key="TimeOfReset" value="12:00:00" />

	</appSettings>

</configuration>